<script>
function openCtrl(ctrlName) {
  var i;
  var x = document.getElementsByClassName("con");
  for (i = 0; i < x.length; i++) {
    x[i].style.display = "none";  
  }
  document.getElementById(ctrlName).style.display = "block";  
}
